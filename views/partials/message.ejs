<!-- Adds a message box -->
<div id="notify" style="display: none;">
    <div id="msg">
        <div id="msg_title">
            
        </div><br>
        <div id="msg_txt">
        </div>
    </div>
    <script type="text/javascript">
        function notify_client(type, msg) {
            var color
            // Sets the color
            if (type == "Server Error") {color = "darkred"}
            else if (["Error", "Declined"].includes(type)) {color = "red"}
            else if (["Successful", "Accepted"].includes(type)) {color = "lime"}
            else if (type == "Your Turn") {color = "orange"}
            // Shows the element and text
            $("#notify").fadeIn(1000)
            $(`#msg_title`).html(`<b style="color:${color}">${type}</b>`)
            $("#msg_txt").text(msg)
            setTimeout(function() {
                $("#notify").fadeOut(1000)
            }, 2000)
        }
    </script>
</div>
